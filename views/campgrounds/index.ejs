<%  include ../partials/header %>


      <!--Show all the campgrounds-->
<div class="container">
     <div class="jumbotron text-center ">
         <h1 style="">Welcome To Israel Camp</h1>
         <p> Amazing mountains and ridges throughout the Land of Israel, come and enjoy a deep and breathtaking experience in the Holy Landr join us! </p>
         <a class="btn btn-dark btn-sm" href="/campgrounds/new">Add New Camp!</a>
    </div>

   
   <div class="row text-center">
          <% campgrounds.forEach(function(campground){ %>
          <div class="col-lg-4 col-md-4 col-sm-6 mb-4">
     <div class="card " >
        <img class="card-img-top" src="<%=campground.img %>">
         <div class="card-body">
             <h5 class="card-title"><%= campground.name %></h5>
                 <p class="card-text"><%= campground.description.substring(0, 70) %></p>
                     <a href="/campgrounds/<%=campground._id%>" class="btn btn-success" style="background:#012660;">More Info</a>
         </div>
    </div>
  </div>
    <% }) %>
</div>

 <%  include ../partials/footer %> 