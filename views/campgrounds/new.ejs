<%  include ../partials/header %>

                <!-- Create new Campground, Showing the form-->
   <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1 style="margin-top: 100px; padding-bottom:25px;">Create a New Campground</h1>
        </div>
     <div class="col-md-6 col-lg-3 col-xs-12">
      
         <form action="/campgrounds" method="POST">
           <div class="form-group">
                      <input class="form-control" type="text" name="name" placeholder="Location">
                 </div>
                 <div class="form-group">
                      <input class="form-control"  type="number" name="price" placeholder="price" min="0.0" step="0.01">   
                 </div> 
                 <div class="form-group">
                      <input class="form-control"  type="text" name="img" placeholder="img url">   
                 </div> 
                  <div class="form-group">
                      <textarea cols="42" rows="5" required  name="description" placeholder="description  "></textarea> 
                 </div> 
                 <div class="form-group">
                 <button class="btn btn-primary btn-block">Submit</button>
                </div> 
         </form>
          <a href="/campgrounds">Go Back</a>
    </div>
   
</div>

 <%  include ../partials/footer %>