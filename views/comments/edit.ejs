<%  include ../partials/header %>

  <!-- Show form to edit a comment-->
  
  
   <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1 style="margin-top: 100px; padding-bottom:25px;">Edit Your Comment </h1>
        </div>
     <div class="col-md-6 col-lg-3 col-xs-12">
      
         <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                 <div class="form-group">
                    <input class="form-control"  type="text" required  name="comment[text]" value="<%=comment.text%>">
                 </div> 
                 <div class="form-group">
                 <button class="btn btn-primary btn-block">Update</button>
                </div> 
         </form>
          <a href="/campgrounds/<%=campground_id%>">Go Back</a>
    </div>
   
</div>

 <%  include ../partials/footer %>