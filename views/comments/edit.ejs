<%  include ../partials/header %>

  <!-- Show form to edit a comment-->
  
  
   <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h2 style="margin-top: 100px; padding-bottom:25px;">Edit Your Comment </h2>
        </div>
     <div class="col-md-6 col-lg-3 col-sm-5 col-10">
      
         <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                 <div class="form-group">
                    <textarea  class="form-control " rows="5" type="text"     placeholder="Edit Your Comment  " required> <%=comment.text%></textarea>
                 </div> 
                 <div class="form-group">
                 <button class="btn btn-primary btn-block">Update</button>
                </div> 
         </form>
          <a href="/campgrounds/<%=campground_id%>">Go Back</a>
    </div>
   
</div>

 <%  include ../partials/footer %>